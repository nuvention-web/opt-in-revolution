.col-md-12
	.page-header
		.prof-label-header
			.row.mt
				.col-md-6
					.fg-h2-special
						h2 My Listings
				.col-md-6
	.opt-login-wrapper
		.prof-label-header
			.table-responsive
				table.table.table-hover
					thead
						tr
							th.proj-title Project Title
							th Date Posted
							th # of Applicants
							th
							th
					tbody.job-table
						if (joblist.length == 0)
							td You haven't posted any project listings yet!
							td
							td
							td
							td
						else
							each job, i in joblist
								-var counter = 0;
								-var appJobMatchArr = [];
									each app in jobAppArr
										if app.jobID==job.id
											-appJobMatchArr.push(app);
											-counter = counter + 1;
									tr(class='jobapp-row')
										td.proj-title #{job.jobName}
										td #{job.dateCreated}
										td #{counter}
										td 
											a.btn.btn-success.btn-md.job-btn(type='button', data-toggle='collapse', data-target='#demo-#{i}', class='jobapp-row') View Applicants										
										td
											.btn.btn-success.btn-md.job-btn.dropdown(class='athenamom-submenu')
												a.dropdown-toggle.job-toggle(href='#', data-toggle='dropdown')
													| More Options
												span.caret.job-caret
												ul.dropdown-menu.pull-right.job-options
													li: a(href='/job/editproject-#{job.id}') Edit Project
													li.divider
													li: a(href='/findprojects') Delete Project
									tr(id="demo-#{i}").collapse.out
										td
											div.jobapp-table
												ul
													each application in appJobMatchArr
														li 
															a(href='/job/viewapplication-#{application.id}', role='button') #{application.user.profile.name} application
										td
										td
										td

