extends layout

block content
	.container
		each mom in candidates
			.row.mt
				.job-card
					.row.mt.job-card-heading
						.col-md-1
							img.pagination-centered(src='/images/office.jpg', width='50', alt='')
						.col-md-11
							h3 #{mom.profile.name}
							h4 #{mom.email}
					.row.mt.job-card-description
						h4 Description
						.col-md-12
							p 
								| #{mom.bio}
					.row.mt.job-card-other
						h4 Details
						.col-md-6
							p 
								b Skills: 
								| #{mom.skills}
							p
								b Interests: 
								| #{mom.interests}
					.row.mt.job-card-buttons
						.col-md-12.col-md-offset-10
							a.btn.btn-success.btn-md.job-btn(href='/job/contact-#{mom.id}', role='button') Contact