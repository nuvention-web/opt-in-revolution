							th
					tbody.job-table
						if (joblist.length == 0)
							td You haven't posted any project listings yet!
							td
							td
							td
							td
						else
							each job, i in joblist
								-var counter = 0;
								-var appJobMatchArr = [];
									each app in jobAppArr
										if app.jobID==job.id
											-appJobMatchArr.push(app);
											-counter = counter + 1;
									tr(class='jobapp-row')
										td.proj-title #{job.jobName}
										td #{job.dateCreated}
										td #{counter}
										td 
											a.btn.btn-success.btn-md.job-btn(type='button', data-toggle='collapse', data-target='#demo-#{i}', class='jobapp-row') View Applicants										
										td
											.btn.btn-success.btn-md.job-btn.dropdown(class='athenamom-submenu')
												a.dropdown-toggle.job-toggle(href='#', data-toggle='dropdown')
													| More Options
												span.caret.job-caret
												ul.dropdown-menu.pull-right.job-options
													li: a(href='/job/editproject-#{job.id}') Edit Project
													li.divider
													li: a(data-toggle='modal', data-target='#deleteProjModal') Delete Project
											#deleteProjModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
												.modal-dialog
													.modal-content
														.modal-header
															button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
															h4#myModalLabel.modal-title Confirm Deletion of Project - #{job.jobName}
														.modal-body
																.deleteprompt
																	| Are you sure you want to delete this project?
																.disclaimer
																	| (Note: It is not possible to undo this action)
														.modal-footer
															form.form-horizontal(method='POST', role='form', action="/job/deleteproject-#{job.id}")
																button.btn.btn-default(type='button', data-dismiss='modal') Close
																button.btn.btn-primary(type='submit') Confirm deletion
									tr(id="demo-#{i}").collapse.out
										td
