extends ../layout

block content
	.tile-job
		.container
			.row.mt.centered
				.col-lg-12
					.job-header
						big
							h1 Job Opportunities
						small
							| See what opportunities await you
	.container
		.row.mt
			.col-md-2
				.job-listing-filter-wrapper
					b
						a(href='/employ', role='button') All Jobs
					br
					br
					b
						| Industry
					br
					select#industry.joblist.multiselect(multiple='multiple')
						- var industries = ['Accounting','Advertising','Broadcasting','Consulting','Consumer Products','Education','Entertainment and Leisure','Financial Services','Food & Beverage','Health Care', 'Nonprofit','Pharmaceuticals','Publishing','Retail', 'Technology']
							each industry in industries
								option(label='industry',value='#{industry}') #{industry}
							//- a(href='/employ?industry=#{industry}', role='button') #{industry}
					//- a(href='/employ?industry=entertainment-and-leisure', role='button') Entertainment and leisure
					br
					br
					b
						| Job Function
					br
					select#jobFunction.joblist.multiselect(multiple='multiple')
						- var jobFunctions = ['Accounting', 'Business Development', 'Customer Service', 'Finance', 'Human Resources', 'Marketing', 'Operations', 'Other', 'Sales', 'Strategy']
							each jobFunc in jobFunctions
								option(label='jobFunctions',value='#{jobFunc}') #{jobFunc}
								//- a(href='/employ?jobfunction=#{jobFunc}', role='button') #{jobFunc}
					br
					br
					b
						| Project Length
					br
					select#totalWeeks.joblist.multiselect(multiple='multiple')
						- var totalWeeks = ['< 1 week', '1-2 weeks', '2-3 weeks', '3-4 weeks', '1-2 months', '2-3 months', '3+ months']
							each project in totalWeeks
								option(label='totalWeeks',value='#{project}') #{project}
					br
					br
					b
						| Hours Per week
					br
					select#hoursPerWeek.joblist.multiselect(multiple='multiple')
						- var hoursPerWeek = ['< 10', '10-20', '20-30', '30-40']
							each hour in hoursPerWeek
								option(label='hoursPerWeek',value='#{hour}') #{hour}
					br
					br
					b
						| Check-in Frequency
					br
					select#checkinFrequency.joblist.multiselect(multiple='multiple')
						- var checkinFrequency = ['Daily', 'Twice a week', 'Weekly', 'Monthly']
							each check in checkinFrequency
								option(label='checkinFrequency',value='#{check}') #{check}
					br
					br
					b
						| Contact Method
					br
					select#primaryComm.joblist.multiselect(multiple='multiple')
						- var primaryComm = ['Email', 'Phone', 'In-Person']
							each comm in primaryComm
								option(label='primaryComm',value='#{comm}') #{comm}
					br
					br
					.btn.btn-success.update-button
						| Update Filters
			.col-md-10
				.row.mt
					//- .job-listing-filter-wrapper
						b
							| Viewing all jobs
				.job-listing-wrapper
					each job, i in joblist
						.row.mt
							.job-card
								.row.mt.job-card-heading
									.col-md-12
										h4 
											| #{job.jobName} - #{job.companyName}
								.row.mt.job-card-description
									h5 Description
									.col-md-12
										| #{job.jobDescription}
								.row.mt.job-card-other
									h5 Details
									.col-md-6
										b Industry: 
										| #{job.industry}
										br
										b Job Function: 
										| #{job.jobFunction}
										br
										b Skills Needed: 
										| #{job.skillsNeeded}
										br
										b Contact Method:
										| #{job.primaryComm}
									.col-md-6
										b Project Length: 
										| #{job.totalWeeks}
										br
										b Hours per week: 
										| #{job.hoursPerWeek}
										br
										b Check-in Frequency: 
										| #{job.checkinFrequency}
										br
										b Pay: 
										| #{job.pay}
								.row.mt.job-card-buttons
									.col-md-2.col-md-offset-10
										if typeof(user)==='undefined'
											a.btn.btn-success.btn-md.job-btn(href='/signup', role='button') Sign Up
										else
											a.btn.btn-success.btn-md.job-btn(href='/job/apply-#{job.id}', role='button') Apply
											a.btn.btn-success.btn-md.job-btn(href='/job/save-#{job.id}', role='button') Save
							
