doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='author', content='')

    title Opt In Revolution

    link(rel='shortcut icon', href='/images/favicon.ico')
    link(href='/css/lib/font-awesome.min.css', rel='stylesheet')
    link(href='/css/lib/animate.css', rel='stylesheet')

    link(href='/css/styles.css', rel='stylesheet')

    script(src='/js/lib/jquery.js')
    script(src='/js/lib/bootstrap.js')
    script(src='/js/google_analytics.js')  
    script(src='/js/main.js')
  body
    .opt-navbar-wrapper
      .navbar.navbar-default.navbar-fixed-top.opt-header(role='navigation')
        .container
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.opt-nav-text.navbar-brand(href='/') 
              img.opt-logo(src='/images/logo_2.png', alt='Opt-In Logo')
              | Opt-In Revolution
          .navbar-collapse.collapse
            .cust-navbar
              ul.nav.navbar-nav
                each nav in [{link: '', name: "Home"}, {link: 'about', name: "About"}, {link: 'team', name: "Team"}]
                  li 
                    a.opt-nav-text(href='/#{nav.link}') #{nav.name}
              ul.nav.navbar-nav.navbar-right
                if !user
                  li(class=title=='Login')
                    a(href='/login') Login
                  li(class=title=='Create Account')
                    a(href='/signup') Create Account
                else if user.userType=='mom'
                  li.dropdown(class=title=='User Actions')
                    a.dropdown-toggle(href='#', data-toggle='dropdown') 
                      | Actions
                      span.caret
                    ul.dropdown-menu
                      li: a(href='/jobslist') View Listings
                      li: a(href='/') View Companies
                  li.dropdown(class=title=='Account Management')
                    a.dropdown-toggle(href='#', data-toggle='dropdown')
                      if user.profile.picture
                        img(src='#{user.profile.picture}')
                      | #{user.profile.name || 'Profile'}&nbsp;
                      span.caret
                    ul.dropdown-menu
                      li: a(href='/account') My Account
                      li.divider
                      li: a(href='/logout') Logout
                else
                  li.dropdown(class=title=='User Actions')
                    a.dropdown-toggle(href='#', data-toggle='dropdown') 
                      | Actions
                      span.caret
                    ul.dropdown-menu
                      li: a(href='/postjob') Post Job
                      li: a(href='/mylistings') View My Listings
                  li.dropdown(class=title=='Account Management')
                    a.dropdown-toggle(href='#', data-toggle='dropdown')
                      if user.profile.picture
                        img(src='#{user.profile.picture}')
                      | #{user.profile.name || 'Profile'}&nbsp;
                      span.caret
                    ul.dropdown-menu
                      li: a(href='/account') My Account
                      li.divider
                      li: a(href='/logout') Logout
    block content