.col-md-12
	form.form-horizontal(action='/account/profile', method='POST', enctype="multipart/form-data")
		.page-header
			.prof-label-header
				.row.mt
					.col-md-6
						.fg-h2-special
							h2 Company Profile
					.col-md-6
						.form-group.fg-special
							.row.mt
								.col-md-6
								.col-md-6
									button.btn.btn.btn-primary.opt-btn-prof(type='submit') Update Profile
		.row.mt
			.col-md-11
				.prof-bottom-wrapper
					.row.mt
						.col-md-12
							.form-group
								.row.mt
									.col-md-12
										label.control-label(for='companyName') Company Name
								.row.mt
									.col-md-12
										if typeof(user.company.companyName)=='undefined'
											input.form-control(type='companyName', name='companyName', id='companyName', value='')
										else
											input.form-control(type='companyName', name='companyName', id='companyName', value='#{user.company.companyName}')
					.row.mt
						.col-md-12
							.form-group
								.row.mt
									.col-md-12
										label.control-label(for='email') Email
								.row.mt
									.col-md-12
										input.form-control(type='email', name='email', id='email', value='#{user.email}')
					.row.mt
						.col-md-12
							.form-group
								.row.mt
									.col-md-12
										label.control-label(for='companyDescription') Company Description
								.row.mt
									.col-md-12
										if typeof(user.company.companyDescription)=='undefined'
											textarea.form-control(type='companyDescription', name='companyDescription', id='companyDescription')
										else
											textarea.form-control(type='companyDescription', name='companyDescription', id='companyDescription')
												| #{user.company.companyDescription}
					br
					br
					br
					br