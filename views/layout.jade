          img(height='1', width='1', alt='', style='display: none;', src='https://www.facebook.com/offsite_event.php?id=6017494117063&value=0.01&currency=USD')
      //- if title == 'Account Management'
        script(src='/js/account_scroll.js')  
  body
    .opt-navbar-wrapper
      .navbar.navbar-default.navbar-fixed-top.opt-header(role='navigation')
        .container
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.opt-nav-text.navbar-brand(href='/') 
              //- img.opt-logo(src='/images/logo_2.png', alt='Opt-In Logo')
              img.opt-logo(src='/images/owl.png', alt='AthenaHire Logo')
              | AthenaHire
              sup.beta Beta
          .navbar-collapse.collapse
            .cust-navbar
              ul.nav.navbar-nav
                //- each nav in [{link: 'about', name: "About"}, {link: 'employ', name: "Employ"}, {link: 'empower', name: "Empower"}, {link: 'engage', name: "Engage"}]
                //- each nav in [{link: 'about', name: "How It Works"}, {link: 'employ', name: "Find a Project"}, {link: 'empower', name: "Post a Project"}]
                if !user || user.userType == 'employer'
                  - var navElems = [{link: 'about', name: "How It Works"}, {link: 'employ', name: "Find a Project"}, {link: 'postjob', name: "Post a Project"}]
                else
                  -var navElems = [{link: 'about', name: "How It Works"}, {link: 'employ', name: "Find a Project"}]
                each nav in navElems
                  li 
                    a.opt-nav-text(href='/#{nav.link}') #{nav.name}
                li
                  a.opt-nav-text(href='http://blog.athenahire.co' target="_blank") Blog
              ul.nav.navbar-nav.navbar-right
                if !user
                  li(class=title=='Login')
                    a(href='/login') Login
                  li(class=title=='Create Account')
                    a(href='/signup') Sign Up
                else if user.userType=='mom'
                  li.dropdown(class=title=='Account Management')
                    a.dropdown-toggle(href='#', data-toggle='dropdown')
                      if user.profile.picture
                        if (user.profile.picture.indexOf('http')!=-1)
                          img.header-prof-pic(src='#{user.profile.picture}')
                        else
                          -var profLink = user.profile.picture;
                          -profLink = profLink.split("public").pop();
                          img.header-prof-pic(src='#{profLink}')
                      else
                        img.header-prof-pic(src='/images/linkedin-default.jpg')
                      | #{user.profile.name || 'Profile'}&nbsp;
                      span.caret
                    ul.dropdown-menu
                      li: a(href='/account') My Account
                      li.divider
                      li: a(href='/employ') View Listings
                      //- li: a(href='/viewsavedjobs') View Saved Jobs
                      li.divider
                      li: a(href='/logout') Logout
                else
                  li.dropdown(class=title=='Account Management')
                    a.dropdown-toggle(href='#', data-toggle='dropdown')
                      if user.profile.picture
                        if (user.profile.picture.indexOf('http')!=-1)
                          img.header-prof-pic(src='#{user.profile.picture}')
                        else
                          -var profLink = user.profile.picture;
                          -profLink = profLink.split("public").pop();
                          img.header-prof-pic(src='#{profLink}')
                      else
                        img.header-prof-pic(src='/images/business_profile.jpg')
                      | #{user.profile.name || 'Profile'}&nbsp;
                      span.caret
                    ul.dropdown-menu
                      li: a(href='/account') My Account
                      li.divider
                      li: a(href='/postjob') Post a Project
                      //- li: a(href='/mylistings') View My Listings
                      //- li: a(href='/viewcandidates') Find Candidates
                      li.divider
                      li: a(href='/logout') Logout
    block content
    if title != "Account Management"
      .footer
        .container
          .footer-content
            .row.mt
              .col-md-4
                .footer-1
                  p About Us
                  ul
                    li
                      a(href='/') AthenaHire
                    li 
                      a(href='http://blog.athenahire.co' target="_blank") Blog                    
                    li 
                      a(href='/team') Team
                  p
                    | &copy; AthenaHire 2014                    
              .col-md-4
                p Join Our Mailing List for Updates
                .form-wrapper
                  form.form-inline.input-form(name="email", role="form", method="post",action="/subscribeEmailPost")
                    .form-group
                      label.sr-only(for='emailInput') Email address
                      input#userEmailInput.form-control(type='email', name="email", placeholder='Enter email')
                    button.btn.btn-default.opt-subscribe-btn(type='submit') Subscribe
              .col-md-4
                p
                  | Contact Us
                  br
                  a(href="mailto:contact@athenahire.co") contact@athenahire.co
                  p
                    a(href="https://www.facebook.com/athenahire" target="_blank").icon-link
                      span.fa.fa-facebook-square.fa-icon-text
                    a(href="https://twitter.com/athenahire" target="_blank").icon-link
                      span.fa.fa-twitter-square.fa-icon-text 
                    a(href="https://www.linkedin.com/company/3682281" target="_blank").icon-link
                      span.fa.fa-linkedin-square.fa-icon-text 


