extends ../layout

block content
	.tile-job
		.container
			.row.mt.centered
				.col-lg-12
					.job-header
						big
							h1 #{title}
						small
							| See what opportunities await you
	.container
		.job-listing-wrapper
			each job, i in joblist
				.row.mt
					.job-card
						.row.mt.job-card-heading
							.col-md-12
								h4
									| #{job.jobName} - #{job.companyName}
						.row.mt.job-card-description
							h5 Description
							.col-md-12
								| #{job.jobDescription}
						.row.mt.job-card-other
							h5 Details
							.col-md-6
								b Industry: 
								| #{job.industry}
								br
								b Job Function: 
								| #{job.jobFunction}
								br
								b Skills Needed: 
								| #{job.skillsNeeded}
							.col-md-6
								b Duration: 
								| #{job.duration}
								br
								b Hours per week: 
								| #{job.hoursPerWeek}
								br
								b Pay: 
								| #{job.pay}
						.row.mt.job-card-buttons
							.col-md-12.col-md-offset-10
								a.btn.btn-success.btn-md.job-btn(href='/job/apply-#{job.id}', role='button') Apply
								//- a.btn.btn-success.btn-md.job-btn(href='/job/save-#{job.id}', role='button') Save
