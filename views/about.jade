extends layout

block content
	.opt-about-header-section
		.container
			//- .row.mt.centered
				.col-md-6
					h1
						//- | About Us
				.col-md-6
					h1 
						.btn-group.menu-right
							button.btn.btn-default
								| I am a: 
							button.btn.btn-default.dropdown-toggle.opt-about-btn-type(type='button', data-toggle='dropdown')
								if view == 'mom'
									| Mother
								else if view == 'biz'
									| Business
								else
									| Click to choose
								span.caret.d-text
							ul.dropdown-menu.pull-right(role='menu')
								li
									a(href='/about?view=mom') Mother
								li
									a(href='/about?view=biz') Business
			.row.mt.centered.opt-about-header-content
				.col-md-6.opt-about-desc
					iframe(src='//player.vimeo.com/video/92294554', width='95%', height='300px', frameborder='0', webkitallowfullscreen='webkitallowfullscreen', mozallowfullscreen='mozallowfullscreen', allowfullscreen='allowfullscreen')
				.col-md-6.opt-about-desc
					blockquote.special
						p
							| AthenaHire is dedicated to finding viable work solutions for mothers and companies by providing a dynamic online marketplace, extensive resources and meaningful networks. 
						br
						br
						br
						br
						a.btn.btn-primary.opt-btn-about-top(href='/signup') Sign Up Today
